                    <foto>multimedia/imagenes/cantiquin2.jpg</foto>
                </fotos_hito>
            </hito>
            <hito nombre_hito="Cartel informativo: Senderos del carbón">
                <descripcion_hito>Cartel informativo con bancoy buenas vistas</descripcion_hito>
